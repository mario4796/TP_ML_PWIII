@{
    ViewData["Title"] = "Perfil";
}

<section class="bg-dark-subtle border-bottom border-dark-subtle py-4">
    <div class="container text-center">
        <div class="perfil-card mx-auto p-4 rounded-4 bg-dark shadow-sm" style="max-width: 500px;">
            <img src="https://cdn-icons-png.flaticon.com/512/1077/1077012.png" alt="avatar" class="rounded-circle perfil-avatar mb-3" width="100" />
            <h3 class="fw-bold mb-0">Juan Pérez</h3>
            <p class="opacity-75 mb-3">juan_musiclover</p>
            <div>
                <button class="btn btn-success rounded-pill px-3 me-2"><i class="bi bi-pencil"></i> Editar perfil</button>
                <button class="btn btn-outline-light rounded-pill px-3"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</button>
