@model TP_ML_PWIII.Web.Models.ViewModels.LoginViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<section class="auth-section d-flex align-items-center justify-content-center position-relative overflow-hidden">
    <div class="auth-glow" aria-hidden="true"></div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="auth-card p-4 p-md-5 rounded-4 position-relative">
                 
                    <div class="text-center mb-4">
                        <div class="auth-icon mx-auto mb-3">
                            <i class="bi bi-music-note-beamed fs-1 text-success"></i>
                        </div>
                        <h2 class="fw-bold text-light mb-2">Bienvenido</h2>
                        <p class="text-light opacity-50 mb-0">Ingresá a tu cuenta</p>
                    </div>

               
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show rounded-3" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-controller="Usuarios" asp-action="Login" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-light fw-semibold">
                                <i class="bi bi-envelope me-1"></i>Email
                            </label>
                            <input asp-for="Email" type="email"
                                   class="form-control form-control-lg auth-input"
                                
                                   placeholder="tu@email.com"
                                   required
                                   autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label text-light fw-semibold">
                                <i class="bi bi-lock me-1"></i>Contraseña
                            </label>
                            <input asp-for="Password"  type="password"
                                   class="form-control form-control-lg auth-input"
                               
                                   placeholder="••••••••"
                                   required
                                   autocomplete="current-password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100 rounded-pill fw-semibold mb-3 auth-btn">
                            Iniciar Sesión
                            <i class="bi bi-arrow-right ms-2"></i>
                        </button>
                    </form>

     
                    <div class="text-center mt-4">
                        <p class="text-light opacity-75 mb-0">
                            ¿No tenés cuenta?
                            <a asp-controller="Usuarios" asp-action="Registro" class="text-success text-decoration-none fw-semibold">
                                Registrate aca
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
