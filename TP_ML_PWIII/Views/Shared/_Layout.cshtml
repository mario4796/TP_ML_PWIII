@{
    var title = ViewData["Title"] ?? "ML Music";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - ML Music</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/styles.css"/>
</head>

<body class="bg-dark text-light">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black border-bottom border-success-subtle">
            <div class="container">
                <a class="navbar-brand fw-bold text-success" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-soundwave"></i> ML Music
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Inicio" ? "active text-success" : "text-light")"
                               asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Explorar" ? "active text-success" : "text-light")"
                               asp-controller="Home" asp-action="Explorar">
                                <i class="bi bi-compass"></i> Explorar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Perfil" ? "active text-success" : "text-light")"
                               asp-controller="Home" asp-action="Perfil">
                                <i class="bi bi-person"></i> Perfil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Acerca" ? "active text-success" : "text-light")"
                               asp-controller="Home" asp-action="Acerca">
                                <i class="bi bi-info-circle"></i> Acerca
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
